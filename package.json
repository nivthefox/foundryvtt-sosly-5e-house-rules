{
    "types": "src/types.js",
    "scripts": {
        "build": "npm run lint:code && npm run build:code && npm run build:styles && npm run build:packs",
        "build:code": "npx rollup --config rollup.config.mjs",
        "build:packs": "node ./tools/convert_yaml_to_ldb.mjs",
        "build:styles": "sass src/styles/house-rules.scss:dist/house-rules.css --style compressed",
        "compose:packs": "node ./tools/convert_ldb_to_yaml.mjs",
        "lint": "npm run lint:code",
        "lint:code": "npx eslint -c .eslintrc.json src/*/**.js",
        "watch": "npm-run-all --parallel watch:*",
        "watch:code": "npm-watch build:code",
        "watch:lint": "npm-watch lint:code",
        "watch:packs": "npm-watch build:packs",
        "watch:styles": "npm-watch build:styles"
    },
    "watch": {
        "build:code": {
            "patterns": [
                "src/",
                "src/**/",
                "src/**/",
                "test/",
                "test/**/"
            ],
            "extensions": [
                "js",
                "json",
                "yaml"
            ],
            "quiet": false,
            "silent": false,
            "inherit": true
        },
        "build:packs": {
            "patterns": [
                "src/packs/"
            ],
            "extensions": [
                "yaml"
            ],
            "quiet": false,
            "silent": false,
            "inherit": true
        },
        "build:styles": {
            "patterns": [
                "src/styles/"
            ],
            "extensions": [
                "scss"
            ],
            "quiet": false,
            "silent": false,
            "inherit": true
        },
        "lint:code": {
            "patterns": [
                "src/",
                "src/**/",
                "src/**/",
                "test/",
                "test/**/"
            ],
            "extensions": [
                "js",
                "json",
                "yaml"
            ],
            "quiet": false,
            "silent": false,
            "inherit": true
        }
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "eslint": "^8.57.0",
        "fancy-log": "^2.0.0",
        "js-yaml": "^4.1.0",
        "npm-run-all": "^4.1.5",
        "npm-watch": "^0.13.0",
        "rollup": "^4.20.0",
        "rollup-plugin-combine": "^2.1.1",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-match": "^1.0.0",
        "sass": "^1.80.5"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "^4.21.0"
    },
    "dependencies": {
        "@rollup/plugin-terser": "^0.4.4",
        "luxon": "^3.5.0"
    }
}
